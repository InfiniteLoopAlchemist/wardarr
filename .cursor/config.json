{
    "default": "nextjs-app",
    "scaffolds": {
        "nextjs-app": {
            "description": "Next.js (App Router) with feature-based & shared-by-type folders",
            "structure": [
                "app/",
                "components/",
                "lib/",
                "hooks/",
                "context/",
                "public/",
                "styles/"
            ]
        },
        "express-service": {
            "description": "Express service with layered MVC-style architecture",
            "structure": [
                "src/routes/",
                "src/controllers/",
                "src/services/",
                "src/repositories/",
                "src/models/",
                "src/middlewares/",
                "src/config/",
                "tests/"
            ]
        },
        "python-package": {
            "description": "Python package (PEP 517/518 src layout)",
            "structure": [
                "src/{{projectName}}/",
                "tests/",
                "docs/",
                "scripts/"
            ]
        }
    }
}