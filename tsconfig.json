{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "server": ["server.ts"],
      "@/*": ["src/*"]
    },
    "types": ["node", "jest", "supertest"],
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "server.ts", "tests/**/*", "jest.setup.ts", "jest.silence.ts"],
  "exclude": ["node_modules", "dist"]
}
